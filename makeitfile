CONST=lib/Image/PNG/Const.pm

TOUT= \
	Libpng.xs \
	Makefile.PL \
	lib/Image/PNG/Libpng.pm \
	lib/Image/PNG/Libpng.pod \
	perl-libpng.c \
	t/PLTE.t \
	typemap \


TIN= \
	build/LibpngInfo.pm \
	build/make-files.pl \
	build/supports.txt \
	build/unsupported-table.txt \
	tmpl/Const.t.tmpl \
	tmpl/Libpng.pm.tmpl \
	tmpl/Libpng.pod.tmpl \
	tmpl/Libpng.t.tmpl \
	tmpl/Libpng.xs.tmpl \
	tmpl/Makefile.PL.tmpl \
	tmpl/PLTE.t.tmpl \
	tmpl/config \
	tmpl/other_modules \
	tmpl/perl-libpng.c.tmpl \
	tmpl/typemap.tmpl \


all:	$(TOUT) $(CONST) README

README: lib/Image/PNG/Libpng.pod META.json
	makereadme > $@

META.json: Makefile.PL
	perl Makefile.PL

$(CONST): build/strip-constants.pl tmpl/Const.pm.tmpl
	build/strip-constants.pl

$(TOUT): $(TIN)
	build/make-files.pl

clean:
	rm -rf $(TOUT) $(CONST)
	rm -rf Image-PNG-Libpng-0.*/ Image-PNG-Libpng-0.*.tar.gz
	rm -f README

